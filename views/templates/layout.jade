doctype 5
html
  head
    title Gathering Our Voices 2014
    meta(name="description", content="Gathering Our Voices is an annual conference in BC for Aboriginal Youth. This year it is hosted in Vancouver at the Hyatt Regency and Fairmont Hotel.")

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    // Resources
    //if lt IE 9
      script(src="/js/html5shiv.min.js")
    // jQuery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
    // Bootstrap
    link(href="//netdna.bootstrapcdn.com/bootswatch/3.0.0/united/bootstrap.min.css", rel="stylesheet")
    script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js")
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.min.css", rel="stylesheet")
    // Custom
    link(href="/css/styles.css", rel="stylesheet")
  body
    #wrap
      header
        .navbar-wrapper
          .container
            include navbar
        #welcome.carousel.slide
          .carousel-inner
            .item.active(style="background: url(#{head.bg})")
              .container
                .carousel-caption
                  h1= head.title
                  p= head.caption
      main
        if session.message
          .container
              .row
                pre.alert.alert-warning= session.message
        block content
    footer
      .container
        .row
          .col-sm-4
            h3 Organizers
              .row
                .col-xs-6
                  a(target="_blank", href="http://www.bcaafc.com/")
                    img(src="/img/bcaafc.png")
                .col-xs-6
                  a(target="_blank", href="http://www.vafcs.org/")
                    img(src="/img/vafcs.png")
              //- TODO: Should be more?
          .col-sm-4
            h3 Contact Us
